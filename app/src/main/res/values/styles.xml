<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Theme -->
    <style name="Theme.MyApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Gunakan atribut berikut untuk mengatur warna sesuai preferensi Anda -->
        <!-- Warna Utama -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Warna Surface dan OnSurface untuk background card, dsb. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="colorSurfaceVariant">@color/grey_200</item>
        <item name="colorOnSurfaceVariant">@android:color/darker_gray</item>

        <!-- Gunakan Material Components -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3</item>
    </style>

</resources>
